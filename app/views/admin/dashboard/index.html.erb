<%= render partial: "shared/admin_header" %>

<div class="row">

  <div id="incomplete_invoices" class="col-sm-8">
    <hr>
    <h2>Incomplete Invoices</h2>
    <% @incomplete_invs.each do |invoice|  %>
      <p>Invoice #
        <%= link_to "#{invoice.id}", admin_invoices_path(invoice) %>
        -<%= invoice.created_at.strftime(" %A, %B %e %Y") %></p>
    <% end %>
  </div>

  <div id="top_customers" class="col-sm-4">
    <hr>
    <h2>Top Customers</h2>
    <% @customers_top_5.each_with_index do |customer, index|  %>
      <p><%= "#{index+1}.#{customer.first_name} #{customer.last_name} #{customer.transaction_count}" %></p>
    <% end %>
  </div>

</div>